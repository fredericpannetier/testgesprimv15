<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<record id="ges_product_pricelist_item_form_view" model="ir.ui.view">
		<field name="name">ges.product.pricelist.item.form</field>
		<field name="model">product.pricelist.item</field>
		<field name="inherit_id" ref="product.product_pricelist_item_form_view" />
		<field name="arch" type="xml">
			<xpath expr="//field[@name='date_end']" position="after">
				<field name="ges_partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"/>
			</xpath>
		</field>
	</record>
	<record id="ges_product_pricelist_view" model="ir.ui.view">
		<field name="name">ges.product.pricelist.view</field>
		<field name="model">product.pricelist</field>
		<field name="inherit_id" ref="product.product_pricelist_view" />
		<field name="arch" type="xml">
			<!-- <xpath expr="//field[@name='item_ids']/tree" position="attributes">
				<attribute name="editable">top</attribute> 
			</xpath> -->
			<xpath expr="//field[@name='item_ids']/tree/field[@name='date_end']" position="after">
				<field name="ges_partner_id" widget="res_partner_many2one" context="{'res_partner_search_mode': 'customer', 'show_address': 1, 'show_vat': True}"/>
			</xpath>
		</field>
	</record>	

    <record id="ges_product_pricelist_form_view" model="ir.ui.view">
		<field name="name">ges.product.pricelist.form</field>
		<field name="model">product.pricelist</field>
		<field name="inherit_id" ref="product.product_pricelist_view" />
		<field name="arch" type="xml">
			<xpath expr="//group" position="after">
				<group>
                    <group name="ges_pricelist_settings">
                        <field name="ges_base_pricelist_id" />
                        <field name="ges_coef" />                        
                    </group>
                </group>
			</xpath>
		</field>
	</record>

	<record id="ges_gen_prices_coef_form_wiz" model="ir.ui.view">
        <field name="name">ges.gen.prices.coef.form</field>
        <field name="model">ges.generate.prices.coef</field>
        <field name="arch" type="xml">
            <form string="Generate prices">                     
                <footer>
                    <button string="Generate" type="object" 
                        name="ges_generate_prices"  default_focus="1" />
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="ges_action_generate_prices_coef_wiz" model="ir.actions.act_window">
        <field name="name">Generate prices from factor</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ges.generate.prices.coef</field>
		<field name="binding_model_id" ref="product.model_product_pricelist"/>            
        <field name="view_mode">form</field>
        <field name="target">new</field>                    
    </record> 

    
</odoo>
