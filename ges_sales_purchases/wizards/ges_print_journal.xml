            </form>
        </field>
    </record>

    <record id="ges_action_wiz_print_journal" model="ir.actions.act_window">
        <field name="name">Print Journal</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ges.print.journal.wiz</field>                
        <field name="context">{'journal_type':'sale'}</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> 
     <record id="ges_action_wiz_print_journal_p" model="ir.actions.act_window">
