        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ges.print.journal.wiz</field>                
        <field name="context">{'journal_type':'purchase'}</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record> 
    
    </data>
