<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
    <record id="ges_print_journal_wiz_form" model="ir.ui.view">
        <field name="name">ges.print.journal.wiz.form</field>
        <field name="model">ges.print.journal.wiz</field>
        <field name="arch" type="xml">
            <form string="Print Journal">
                <separator string="SÃ©lection"/>
                <group>
                    <group>
                        <field name="ges_journal" widget="many2many_tags"/>
                        <field name="ges_dateB"/>                        
                        <field name="ges_dateE"/>
                    </group>
                    <group/>
                </group>
                <footer>
                    <button string="Print" type="object" name="edit_journal"
                        default_focus="1" class="oe_link"/>                    
