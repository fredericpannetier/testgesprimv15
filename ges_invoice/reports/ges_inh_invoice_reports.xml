<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="ges_report_invoice_document" inherit_id="account.report_invoice_document">
    <!-- <xpath expr="//t[@t-set='address']" position="replace"/>    
    -->
    <xpath expr="//div[@id='informations']" position="replace"/>
    <xpath expr="//div/h2" position="replace">            
            <t t-set="information_block" >
                <h2>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'posted'">Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'draft'">Draft Invoice</span>
                    <span t-if="o.move_type == 'out_invoice' and o.state == 'cancel'">Cancelled Invoice</span>
                    <span t-if="o.move_type == 'out_refund'">Credit Note</span>
                    <span t-if="o.move_type == 'in_refund'">Vendor Credit Note</span>
                    <span t-if="o.move_type == 'in_invoice'">Vendor Bill</span>
                    <span t-if="o.name != '/'" t-field="o.name"/>
                </h2>

                <div id="informations" class="row mt32 mb32">
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date" name="invoice_date">
                        <strong>Invoice Date:</strong>
                        <p class="m-0" t-field="o.invoice_date"/>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and o.state == 'posted'" name="due_date">
                        <strong>Due Date:</strong>
                        <p class="m-0" t-field="o.invoice_date_due"/>
                    </div>                    
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.partner_id.ref" name="customer_code">
                        <strong>Customer Code:</strong>
                        <p class="m-0" t-field="o.partner_id.ref"/>
                    </div>
                    <div class="col-auto col-3 mw-100 mb-2" t-if="o.ref" name="reference">
                        <strong>Reference:</strong>
                        <p class="m-0" t-field="o.ref"/>
                    </div>
                </div>
            </t>        
    </xpath>
    
    <xpath expr="//th[@name='th_description']" position="replace">
        <th name="th_description" class="text-left">            
            <div><span>Description</span></div>
            <div><span>Category - Size</span></div>            
        </th>      
        <t t-if="ges_print_with_lots">  
            <t t-if="o.ges_one_lot==True">  
                <th name="ges_th_lot" class="text-left">            
                    <div><span>Lot</span></div>                    
                </th>   
            </t>
        </t>
    </xpath>
    <xpath expr="//th[@name='th_quantity']" position="before">    
        <th name="ges_th_orig_brand" class="text-left">
            <div><span>Origin</span></div>
            <div><span>Brand</span></div>
        </th>
        <th name="ges_th_packages" class="text-right">
            <div><span>Packages</span></div>            
        </th>
        <th name="ges_th_pieces" class="text-right">
            <div><span>Pieces</span></div>            
        </th>
        <th name="ges_th_nweight" class="text-center">
            <div><span>Net weight</span></div>            
            <div><span>Gross weight</span></div>
        </th>      
    </xpath>
    <xpath expr="//th[@name='th_priceunit']" position="attributes"> 
        <attribute name="t-attf-class">text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}</attribute>
    </xpath>
    <xpath expr="//td[@name='account_invoice_line_name']" position="replace">    
        <td name="account_invoice_line_name" class="text-left">            
            <div><span t-field="line.name" t-options="{'widget': 'text'}"/></div>
            <div><span t-field="line.ges_category_id.name"/> - <span t-field="line.ges_size_id.name"/></div>            
        </td>   
            
    </xpath>   
    <xpath expr="//td[@name='account_invoice_line_name']" position="after">
        <t t-if="ges_print_with_lots">  
            <t t-if="o.ges_one_lot==True">                  
                <t t-foreach="line.ges_lots" t-as="ges_lot">                        
                    <td name="ges_td_lot" class="text-left"><span t-esc="ges_lot[0]"/></td>                        
                </t>                          
            </t>
        </t> 
        <td name="ges_td_orig_brand" class="text-left">                          
            <div><span t-field="line.ges_origin_id.name"/></div>
            <div><span t-field="line.ges_brand_id.name"/></div>            
        </td>    
        <td name="ges_td_packages" class="text-right">              
            <div><span t-field="line.ges_pack"/></div>                    
        </td>
        <td name="ges_td_pieces" class="text-right">            
            <div><span t-field="line.ges_piece"/></div>                    
        </td>
        <td name="ges_td_nweight" class="text-right">            
            <div><span t-field="line.ges_nweight"/></div>                    
            <div><span t-field="line.ges_gweight"/></div>                    
        </td>      
    </xpath>    
    <xpath expr="//tbody/t[3]//tr" position="after">
        <t t-if="line.product_id.product_tmpl_id.type == 'product' and line.product_id.product_tmpl_id.tracking != 'none'">  
            <t t-if="ges_print_with_lots">  
                <t t-if="o.ges_one_lot==False">
                    <t t-foreach="line.ges_lots" t-as="ges_lot">
                        <tr>                    
                            <td class="text-right"><span>Lot : </span></td>
                            <td class="text-left"><span t-esc="ges_lot[0]"/></td>
                            <td></td>
                            <td></td>
                            <td></td>
                            <td class="text-right">
                                <span t-esc="ges_lot[1]"/>
                                <span t-field="line.product_uom_id"  groups="uom.group_uom"/>
                            </td>
                            <td></td>
                            <td></td>
                            <td></td>                                        
                        </tr> 
                    </t>
                </t>                             
            </t>
        </t>
    </xpath>  
    <xpath expr="//div[@id='total']/div" position="attributes">
        <attribute name="t-attf-class">#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-4'} ml-auto</attribute>
                
    </xpath>    
    
  </template>
  
  <template id="ges_report_invoice_with_lots">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-if="o.ges_copies == 0">
                    <t t-set="copies" t-value="1"/>                
                </t>
                <t t-else="">
                    <t t-set="copies" t-value="o.ges_copies"/>                    
                </t>
                <t t-foreach="range(copies)" t-as="n">
                    <t t-set="lang" t-value="o.invoice_user_id.sudo().lang if o.move_type in ('in_invoice', 'in_refund') else o.partner_id.lang"/>
                    <t t-set="ges_print_with_lots" t-value="True"/>
                    <t t-call="#{ o._get_name_invoice_report() }" t-lang="lang"/>
                </t>
            </t>
        </t>
    </template>
  
  <record id="ges_account_invoices_lots" model="ir.actions.report">
            <field name="name">Invoices with lots</field>
            <field name="model">account.move</field>
            <field name="report_type">qweb-pdf</field>
            <field name="report_name">ges_invoice.ges_report_invoice_with_lots</field>
            <field name="report_file">ges_invoice.ges_report_invoice_with_lots</field>
            <field name="print_report_name">(object._get_report_base_filename())</field>
            <field name="attachment">(object.state == 'posted') and ((object.name or 'INV').replace('/','_')+'.pdf')</field>
            <field name="binding_model_id" ref="account.model_account_move"/>
            <field name="binding_type">report</field>
            <field name="groups_id" eval="[(4, ref('account.group_account_invoice')),
 (4, ref('account.group_account_readonly'))]"/>
        </record>
        
    <template id="ges_report_invoice" inherit_id="account.report_invoice">
        <xpath expr="//t[@t-call='account.report_invoice_document']" position="replace">
            <t t-if="o.ges_copies == 0">
                <t t-set="copies" t-value="1"/>                
            </t>
            <t t-else="">
                <t t-set="copies" t-value="o.ges_copies"/>                    
            </t>
            <t t-foreach="range(copies)" t-as="n">
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                        t-call="account.report_invoice_document" t-lang="lang"/>
            </t>        
        </xpath>      
    </template>
      
    <template id="ges_report_invoice_with_payments" inherit_id="account.report_invoice_with_payments">
        <xpath expr="//t[@t-call='account.report_invoice_document']" position="replace">
            <t t-if="o.ges_copies == 0">
                <t t-set="copies" t-value="1"/>                
            </t>
            <t t-else="">
                <t t-set="copies" t-value="o.ges_copies"/>                    
            </t>
            <t t-foreach="range(copies)" t-as="n">
                <t t-if="o._get_name_invoice_report() == 'account.report_invoice_document'"
                        t-call="account.report_invoice_document" t-lang="lang"/>
            </t>        
        </xpath>      
    </template>
                   
</odoo>
