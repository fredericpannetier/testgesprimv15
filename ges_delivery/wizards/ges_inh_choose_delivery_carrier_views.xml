<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ges_delivery_choose_delivery_carrier_view_form" model="ir.ui.view">
        <field name="name">ges.delivery.choose.delivery.carrier.form</field>
        <field name="model">choose.delivery.carrier</field>
        <field name="inherit_id" ref="delivery.choose_delivery_carrier_view_form" />
        <field eval="80" name="priority" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="before">
                <field name='ges_ship_cost_owed' invisible="1"/>  
                <div role="alert" class="alert alert-info" attrs="{'invisible': [('ges_ship_cost_owed', '=', True)]}">
                    <field name="ges_ship_cost_message" nolabel="1"/>
                </div>                
            </xpath>              
        </field>
    </record>                             
</odoo>
