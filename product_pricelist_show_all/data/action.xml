<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">        
        <record id="di_recompute_product_pricelists" model="ir.cron">
            <field name="name">DI Recompute product pricelists</field>
            <field name="active">True</field>
            <field name="user_id" ref="base.user_root" />
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="priority">0</field>
            <field name="model_id" ref="model_product_pricelist"/>
            <field name="doall">1</field>                        
            <field name="code">model.env.add_to_compute(model._fields['di_products'],model.search([]))</field>            
            <field name="nextcall" eval="(datetime.utcnow() + timedelta(days=1)).strftime('%Y-%m-%d 01:00:00')"/>            
        </record>

    </data>
</odoo>
