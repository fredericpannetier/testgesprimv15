<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="ges_inventory_move_line_operation_tree" model="ir.ui.view">
        <field name="name">ges.inventory.move.line.operations.tree</field>
        <field name="model">ges.inventory.move.line</field>
        <field name="arch" type="xml">
            <tree editable="bottom" decoration-muted="state == 'done'" default_order="incoming_date">               
                <field name="product_id" invisible="1"/>
                <field name="company_id" invisible="1"/>
                <field name="state" invisible="1"/>                
                <field name="location_id" invisible="1"/>
                <field name="incoming_date" invisible="1" force_save="1"/>                  
                <field name="lot_id" required="context.get('show_lots_m2o')"  invisible="not context.get('show_lots_m2o')" domain="[('product_id', '=', product_id)]" groups="stock.group_production_lot" context="{'default_product_id': product_id}"/>                
                <field name="qty_theo" string="Theoretical qty" width="0.5"
                       force_save="1" readonly="1" optional="show"/>
                <field name="pack_theo" string="Theoretical packages" width="0.5"
                       readonly="1" optional="show"/>
                <field name="pieces_theo" string="Theoretical pieces" width="0.5"
                       readonly="1" optional="show"/> 
                <field name="nweight_theo" string="Theoretical net weight" width="0.5"
                       readonly="1" optional="show"/>                  
                <field name="qty" width="0.5" string="Quantity"/>
                <field name="pack" width="0.5" string="Packages" optional="show"/>  
                <field name="pieces" width="0.5" string="Pieces" optional="show"/>  
                <field name="nweight" width="0.5" string="Net weight" optional="show"/>                
            </tree>
        </field>
    </record>

    <record id="ges_inventory_move_form" model="ir.ui.view">
        <field name="name">ges.inventory.move.form</field>
        <field name="model">ges.inventory.move</field>        
        <field name="arch" type="xml">
            <form string="Move Detail">
                <group>
                    <field name="state" invisible="1"/>
                    <field name="product_id" readonly="1"/>
                    <group>                        
                        <field name="qty_theo" string="Theoretical qty"  force_save="1" readonly="1"/>
                        <field name="pack_theo" string="Theoretical packages" readonly="1" />
                        <field name="pieces_theo" string="Theoretical pieces" readonly="1" /> 
                        <field name="nweight_theo" string="Theoretical net weight"  readonly="1" />     
                    </group> 
                    <group>            
                        <field name="qty"  string="Quantity" readonly="1" force_save="1"/>
                        <field name="pack"  string="Packages" readonly="1"/>  
                        <field name="pieces"  string="Pieces" readonly="1"/>  
                        <field name="nweight"  string="Net weight" readonly="1"/> 
                    </group>  
                </group>
                <!-- <field name="show_details"  string="Show details" /> -->
                <!-- <field name="move_line_ids"  attrs="{'readonly': ['|', ('state', '=', 'cancel'), ('state', '=', 'done')],'invisible':[('show_details', '!=', True)]}" context="{'tree_view_ref': 'ges_stock.ges_inventory_move_line_operation_tree', 'default_move_id': id, 'default_product_id': product_id}"/> -->
                <field name="move_line_ids"  attrs="{'readonly': ['|', ('state', '=', 'cancel'), ('state', '=', 'done')]}" context="{'tree_view_ref': 'ges_stock.ges_inventory_move_line_operation_tree', 'default_move_id': id, 'default_product_id': product_id}"/>
                <!-- <footer class="oe_edit_only">
                    <button string="Confirm" special="save" class="oe_highlight"/>
                    <button string="Discard" special="cancel"/>
                </footer> -->
            </form>
            </field>
        </record>

    <record id="ges_inventory_move_tree" model="ir.ui.view">
        <field name="name">ges.inventory.move.tree</field>
        <field name="model">ges.inventory.move</field>
        <field name="arch" type="xml">                     
            <tree default_order="product_id" create="false" editable="top" string="Inventory Details" 
                  decoration-danger="qty != qty_theo"
                  decoration-muted="qty == qty_theo" >                      
                <field name="company_id" invisible="1"/>                                            
                <field name="product_id" width="1.6"
                       context="{'default_type': 'product'}"
                       readonly="1"
                       attrs="{'readonly': [('state', '!=', 'confirm')]}"/>                
                <field name="qty_theo" string="Theoretical qty" width="0.5"
                       force_save="1" readonly="1" optional="show"/>
                <field name="pack_theo" string="Theoretical packages" width="0.5"
                       readonly="1" optional="show"/>
                <field name="pieces_theo" string="Theoretical pieces" width="0.5"
                       readonly="1" optional="show"/> 
                <field name="nweight_theo" string="Theoretical net weight" width="0.5"
                       readonly="1" optional="show"/>                  
                <field name="qty" width="0.5" string="Quantity"/>
                <field name="pack" width="0.5" string="Packages" optional="show"/>  
                <field name="pieces" width="0.5" string="Pieces" optional="show"/>  
                <field name="nweight" width="0.5" string="Net weight" optional="show"/>                                                  
                <field name="inventory_id" invisible="1"/>
                <field name="state" invisible="1"/>
                <button name="action_show_details" title="Details" class="o_icon_button fa fa-list"  type="object"  />                   
            </tree>            
        </field>
    </record>


    <record id="ges_inventory_move_search" model="ir.ui.view">
        <field name="name">ges.inventory.move.search</field>
        <field name="model">ges.inventory.move</field>
        <field name="arch" type="xml">
            <search string="Search Inventory Moves">
                <field name="product_id"/>                
            </search>
        </field>
    </record>

    <record id="view_inventory_filter" model="ir.ui.view">
        <field name="name">ges.inventory.filter</field>
        <field name="model">ges.inventory</field>
        <field name="arch" type="xml">
            <search string="Search Inventory">
                <field name="name" string="Reference"/>
                <field name="product_ids" string="Product" filter_domain="['|', ('product_ids', 'ilike', self), ('move_ids.product_id','ilike',self)]"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="In Progress" name="confirm" domain="[('state', '=', 'confirm')]"/>
                <filter string="Validated" name="done" domain="[('state', '=', 'done')]"/>
                <separator/>
                <!-- <filter string="Inventory Date" name="inventory_date" date="date"/> -->
                <!-- <group expand="0" string="Group By"> -->
                    <!-- <filter string="Status" name="status" domain="[]" context="{'group_by': 'state'}"/> -->
                    <!-- <filter string="Inventory Date" name="inventories_month" domain="[]" context="{'group_by': 'date'}" help="Physical Inventories by Date"/> -->
                <!-- </group> -->
            </search>
        </field>
    </record>

    <record id="view_inventory_tree" model="ir.ui.view">
        <field name="name">ges.inventory.tree</field>
        <field name="model">ges.inventory</field>
        <field name="arch" type="xml">
            <tree string="Lot/Serial Number Inventory" sample="1">
                <field name="date"/>
                <field name="name"/>
                <field name="location_ids" widget="many2many_tags" optional="hide" groups="stock.group_stock_multi_locations"/>
                <field name="product_ids" widget="many2many_tags" optional="hide"/>
                <field name="company_id" groups="base.group_multi_company" optional="show"/>
                <field name="state" widget="badge" decoration-success="state == 'done'" decoration-info="state in ('draft', 'confirm')"/>
            </tree>
        </field>
    </record>

 

    <record id="view_inventory_form" model="ir.ui.view">
        <field name="name">ges.inventory.form</field>
        <field name="model">ges.inventory</field>
        <field name="arch" type="xml">
            <form string="Inventory Adjustment FIFO">
            <header>
                <button name="action_start" states="draft" string="Start Inventory" type="object" class="oe_highlight" groups="stock.group_stock_user"/>
                <!-- <button name="action_open_inventory_moves" states="confirm" string="Continue Inventory" type="object" class="oe_highlight" groups="stock.group_stock_user"/> -->
                <button name="action_validate" string="Validate Inventory" type="object" attrs="{'invisible': ['|', ('state', '!=', 'confirm'), ('move_ids', '!=', [])]}" groups="stock.group_stock_manager"/>
                <button name="action_validate" string="Validate Inventory" type="object" attrs="{'invisible': ['|', ('state', '!=', 'confirm'), ('move_ids', '=', [])]}" class="oe_highlight" groups="stock.group_stock_manager"/>
                
                <!-- <button name="action_print" string="Print Count Sheet" type="object" attrs="{'invisible': [('state', '=', 'draft')]}" groups="stock.group_stock_user"/> -->
               
                <button name="action_cancel_draft" states="cancel" string="Set to Draft" type="object"/>
                <button name="action_cancel_draft" states="confirm" string="Cancel Inventory" type="object"
                    confirm="If you cancel this inventory adjustment, all its inventory adjustment lines will be lost. Are you sure you want to discard it ?"/> 
                <field name="state" widget="statusbar" statusbar_visible="draft,confirm,done"/>
            </header>
            <sheet>                                
                <div class="oe_title">
                    <label for="name" class="oe_edit_only"/>
                    <h1><field name="name" placeholder="e.g. Annual inventory"/></h1>
                </div>
                <group>
                    <group>
                        <field name="category_ids" widget="many2many_tags"/>
                        <field name="location_ids" options="{'no_create': True}"
                               widget="many2many_tags"
                               force_save="1"
                               groups="stock.group_stock_multi_locations"/>
                        <field name="product_ids"
                               context="{'default_type': 'product'}"
                               widget="many2many_tags"/>
                        <field name="exhausted"/>
                    </group>
                    <group>
                        <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                        <field name="prefill_counted_quantity" widget="radio"
                               attrs="{'invisible': [('state', '!=', 'draft')]}"/>
                    </group>
                </group>
                
                <field nolabel="1" name="move_ids"  attrs="{'readonly': ['|', ('state', '=', 'cancel'), ('state', '=', 'done')]}" context="{'tree_view_ref': 'ges_stock.ges_inventory_move_tree', 'default_inventory_id': id}"/>
                
            </sheet>                
            </form>
        </field>
    </record>

    <record id="action_inventory_form" model="ir.actions.act_window">
        <field name="name">Inventory Adjustments FIFO</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">ges.inventory</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_inventory_tree"/>
        <field name="search_view_id" ref="view_inventory_filter"/>        
    </record> 

